(function($){function setupHiding(){var $toggler=$(this),$subject=$($toggler.data('h5p-visibility-subject-selector')),toggle=function(){$subject.toggle($toggler.is(':checked'))};$toggler.change(toggle);toggle()}
function setupRevealing(){var $button=$(this),$input=$('#'+$button.data('control'));if(!$input.data('value')){$button.remove();return};var revealed=false,text=$button.html();$button.click(function(){if(revealed){$input.val('');$button.html(text);revealed=false}else{$input.val($input.data('value'));$button.html($button.data('hide'));revealed=true}})};$(document).ready(function(){$('.h5p-visibility-toggler').each(setupHiding);$('.h5p-reveal-value').each(setupRevealing)})})(H5P.jQuery)